@page
@model Covid19Screening.Web.Pages.Security.LoginModel
@{
    ViewData["Title"] = "Login";
}

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="SocialSecurityNumber" class="control-label"></label>
            <input asp-for="SocialSecurityNumber" class="form-control">
            <span asp-validation-for="SocialSecurityNumber"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="MobileNumber" class="control-label"></label>
            <input asp-for="MobileNumber" class="form-control">
            <span asp-validation-for="MobileNumber"></span>
        </div>
    </div>

    <input type="submit" class="btn btn-danger" value="Anmelden" />
    <a class="btn btn-secondary" asp-page="/Index">Zurück</a>
</form>
