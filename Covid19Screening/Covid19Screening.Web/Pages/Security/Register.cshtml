@page
@using Covid19Screening.Core
@model Covid19Screening.Web.Pages.Security.RegisterModel
@{
    ViewData["Title"] = "Registrieren";
}
<h1>COVID-19 Screening</h1>
<br />

<h2>Registrieren</h2>
<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Birthdate" class="control-label"></label>
            <input type="date" asp-for="Birthdate" class="form-control">
            <span asp-validation-for="Birthdate" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Gender" class="control-label"></label>
            <select asp-for="Gender" class="form-control" asp-items="@Html.GetEnumSelectList<Enums.Gender>()">
                <option selected="selected" value="">Geschlecht auswählen</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="SocialSecurityNumber" class="control-label"></label>
            <input asp-for="SocialSecurityNumber" class="form-control">
            <span asp-validation-for="SocialSecurityNumber" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="MobileNumber" class="control-label"></label>
            <input asp-for="MobileNumber" class="form-control">
            <span asp-validation-for="MobileNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Street" class="control-label"></label>
            <input asp-for="Street" class="form-control">
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
    </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="HouseNumber" class="control-label"></label>
                <input asp-for="HouseNumber" class="form-control">
                <span asp-validation-for="HouseNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="StairNumber" class="control-label"></label>
                <input asp-for="StairNumber" class="form-control">
                <span asp-validation-for="StairNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="DoorNumber" class="control-label"></label>
                <input asp-for="DoorNumber" class="form-control">
                <span asp-validation-for="DoorNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Postcode" class="control-label"></label>
                <input asp-for="Postcode" class="form-control">
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        <input type="submit" class="btn btn-primary" value="Registrieren" />
        <a class="btn btn-secondary" asp-page="/Index">Abbrechen</a>
</form>